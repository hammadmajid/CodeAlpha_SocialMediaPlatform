[Unit]
Description=Pubment Backend Application
After=network.target

[Service]
Type=simple
User={{ app_user }}
WorkingDirectory={{ app_dir }}/app
Environment=NODE_ENV={{ node_env }}
EnvironmentFile={{ app_dir }}/app/.env
ExecStart=/usr/bin/pnpm --filter server run start
Restart=always
RestartSec=10

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths={{ app_dir }}

[Install]
WantedBy=multi-user.target